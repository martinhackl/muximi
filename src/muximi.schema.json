{
  "$schema": "http://json-schema.org/schema#",
  "session": {
    "description": "Session description",
    "type": "object",
    "properties": {
      "name": {
        "description": "Tmux session name",
        "type": "string"
      },
      "root": {
        "description": "Root path for all windows",
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "root"
    ]
  },
  "hooks": {
    "description": "Hooks to run at specific points during session creation",
    "type": "object",
    "properties": {
      "before": {
        "description": "This hook will run before the session will be created",
        "type": "object",
        "properties": {
          "cmd": {
            "desciption": "The command to run",
            "type": "string"
          },
          "trigger": {
            "description": "The conditions when the hook should be triggered",
            "type": "object",
            "properties": {
              "remove": {
                "description": "Run before session remove",
                "type": "boolean"
              },
              "create": {
                "description": "Run before session create",
                "type": "boolean"
              },
              "attach": {
                "description": "Run before session attach",
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "required": [
          "cmd"
        ]
      }
    },
    "additionalProperties": false
  },
  "windows": {
    "description": "Array of window objects which should be created",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Window name",
          "type": "string"
        },
        "path": {
          "description": "Path relative to root",
          "type": "string"
        },
        "cmd": {
          "description": "Command to execute when window is created",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "path"
      ]
    }
  }
}
